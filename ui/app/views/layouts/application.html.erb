<!DOCTYPE html>
<html>
<head>
  <title>Tesla Tracking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="no-skin">

    <div class="navbar" id="navbar">

      <div id="navbar-container" class="navbar-container">

          <!-- toggle buttons are here or inside brand container -->

          <div class="navbar-header pull-left">
            <a href="#" class="navbar-brand">
            <small>
              <i class="ace-icon fa fa-bolt"></i>
              Tesla Tracking
            </small>
           </a>
          </div><!-- /.navbar-header -->


          <div class="navbar-buttons navbar-header pull-right ">
            <ul class="nav ace-nav">
              <!-- user buttons such as messages, notifications and user menu -->
            </ul>
          </div><!-- /.navbar-buttons -->


          <nav class="navbar-menu pull-left">
            <!-- optional menu & form inside navbar -->
          </nav><!-- /.navbar-menu -->

       </div><!-- /.navbar-container -->

    </div>

    <div class="main-container" id="main-container">

      <div class="sidebar responsive" id="sidebar">

        <div class="sidebar-shortcuts" id="sidebar-shortcuts">
            <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
              <button class="btn btn-info"><i class="ace-icon fa fa-car"></i></button>
              <button class="btn btn-success"><i class="ace-icon fa fa-suitcase"></i></button>
              <button class="btn btn-danger"><i class="ace-icon fa fa-map-marker"></i></button>
            </div>

            <div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
              <span class="btn btn-info"></span>
              <span class="btn btn-success"></span>
              <span class="btn btn-danger"></span>
            </div>
         </div>
         
         <ul class="nav nav-list">
           <li>
            <a href="/vehicles/<%=params[:vehicle_id]%>/">
              <i class="menu-icon fa fa-car"></i>
              <span class="menu-text">
                Vehicles
              </span>
            </a>
          </li>
          <li>
            <a href="/vehicles/<%=params[:vehicle_id]%>/trips">
              <i class="menu-icon fa fa-suitcase"></i>
              <span class="menu-text">
                Trips
              </span>
            </a>
          </li>
          <li>
            <a href="/vehicles/<%=params[:vehicle_id]%>/locations">
              <i class="menu-icon fa fa-map-marker"></i>
              <span class="menu-text">
                Locations
              </span>
            </a>
          </li>
            
         </ul>

         <div data-target="#sidebar" id="sidebar-collapse" class="sidebar-toggle sidebar-collapse">
           <i class="ace-icon fa fa-angle-double-left" data-icon1="ace-icon fa fa-angle-double-left" data-icon2="ace-icon fa fa-angle-double-right"></i>
        </div>
      </div>
      
      <div class="main-content"><div class="main-content-inner">
     
        <div class="page-content">
          <!-- setting box goes here if needed -->
          <%= yield %>
        </div><!-- /.page-content -->

      </div></div><!-- /.main-content -->
    </div><!-- /.main-container -->

</body>
</html>
