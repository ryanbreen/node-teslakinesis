
<div id="breadcrumbs" class="breadcrumbs">
 <ul class="breadcrumb">
   <li><i class="fa fa-home home-icon"></i> <a href="<%= vehicle_path(params[:vehicle_id]) %>">Vehicles</a></li>
   <li><a href="<%= vehicle_trips_path(params[:vehicle_id])%>">Trips</a></li>
   <li><a href="<%= vehicle_locations_path(params[:vehicle_id], @to)%>">To <%= @to.name %></a></li>
 </ul><!-- /.breadcrumb -->

 <!-- searchbox -->
</div>

<div class="page-content">

  <div class="page-header">
    <h1>
     Trips to <%= @to.name %>
     <small><i class="ace-icon fa fa-angle-double-right"></i> sorted by most common</small>
   </h1>
  </div>

  <div class="row"><div class="col-xs-12">
    <table id="simple-table" class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Origin</th>
          <th>Number of trips</th>
        </tr>
      </thead>

      <tbody>
  <% @endpoints.each do |endpoint| %>

        <tr>
          <td><%= link_to endpoint[0], vehicle_trips_between_path(params[:vehicle_id], endpoint[0], @to.name) %></td>
          <td><%= pluralize(endpoint[1], 'trip', 'trips') %></td>
        </tr>

  <% end %>

      </tbody>
    </table>
  </div></div>

</div><!-- /.page-content -->