<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'
  type='text/javascript'></script>

<%= javascript_include_tag "gmaps/google" %>
<%= javascript_include_tag "underscore" %>

<%
location = @location if location == nil
index = 0 if index == nil
width = 800 if width == nil
height = 400 if height == nil
%>

<div style='width: <%= width %>px;'>
  <div id="map<%= index %>" style='width: <%= width %>px; height: <%= height %>px;'></div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map<%=index%>'
    }
  },
  function(){
    markers = handler.addMarkers([
      {
        "lat": "<%= location.geolocation.latitude %>",
        "lng": "<%= location.geolocation.longitude %>",
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(14);
  }
);
</script>