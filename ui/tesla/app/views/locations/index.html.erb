<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, vehicle_location_path(@vehicle, location) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

