
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'
  type='text/javascript'></script>

<%= javascript_include_tag "gmaps/google" %>
<%= javascript_include_tag "underscore" %>

<div style='width: 1200px;'>
  <div id="map" style='width: 1200px; height: 800px;'></div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    handler.addMarker({
      "lat": <%= @trip.start_location.latitude %>,
      "lng": <%= @trip.start_location.longitude %>,
      "picture": {
        "url": "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
        "width": 32,
        "height": 32
      }
    });
    handler.addMarker({
      "lat": <%= @trip.end_location.latitude %>,
      "lng": <%= @trip.end_location.longitude %>,
      "picture": {
        "url": "http://maps.google.com/mapfiles/ms/icons/red-dot.png",
        "width": 32,
        "height": 32
      }
    });
    var polyline = <%= raw @hash.to_json %>;
    handler.addPolyline(polyline);
    handler.bounds.extend(<%= raw @upper_left.to_json %>);
    handler.bounds.extend(<%= raw @lower_right.to_json %>);
    handler.fitMapToBounds();
  }
);
</script>

Start: <%= @trip.start_time %><br><br>

<% if @trip.origin != nil %>
Origin: <%= @trip.origin.name %><br><br>
<% end %>

End: <%= @trip.end_time %><br><br>

<% if @trip.destination != nil %>
Destination: <%= @trip.destination.name %><br><br>
<% end %>

Duration: <%= distance_of_time_in_words(@trip.start_time, @trip.end_time, include_seconds: true) %><br><br>

<%= link_to "Back to trips", vehicle_trips_path(@vehicle) %>
<br><br>

<h1>Detailed telemetry</h1>
 
<table>
  <tr>
    <th>Time</th>
    <th>Speed</th>
    <th>Lat</th>
    <th>Lng</th>
  </tr>
 
<% @vehicle_telemetry_metrics.each do |metric| %>
  <tr>
    <td><%= metric.timestamp %></td>
    <td><%= metric.speed %></td>
    <td><%= metric.location.latitude %></td>
    <td><%= metric.location.longitude %></td>
  </tr>
<% end %>
</table>
